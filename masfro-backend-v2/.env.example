# OpenWeatherMap API Configuration
# Get your free API key at: https://openweathermap.org/api
# Free tier: 1,000 calls/day (sufficient for this application)
OPENWEATHERMAP_API_KEY=your_api_key_here

# Optional: Twitter API Keys (for ScoutAgent - future implementation)
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_SECRET=

# Optional: Database Configuration (for historical data storage - future)
# DATABASE_URL=postgresql://user:password@localhost:5432/masfro

# Optional: Redis Configuration (for caching - future)
# REDIS_URL=redis://localhost:6379/0

# Application Settings
# DEBUG=True
# LOG_LEVEL=INFO

# Security Settings
# Comma-separated list of allowed frontend origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API Key for protecting sensitive endpoints (change in production!)
API_KEY=development-key-change-in-production

# Environment (development/staging/production)
ENVIRONMENT=development

# Required: Google API Key (for map services)
GOOGLE_API_KEY=your_google_api_key_here

# Required: Database URL
DATABASE_URL=postgresql://user:password@localhost:5432/masfro

# Required: Twitter credentials (for ScoutAgent - currently disabled)
TWITTER_EMAIL=your_email@example.com
TWITTER_PASSWORD=your_password_here

# ========== LLM CONFIGURATION (v2) ==========
# Qwen 3 LLM Integration via Ollama
# Install Ollama: https://ollama.ai/download
# Pull models:
#   ollama pull qwen3
#   ollama pull qwen3-vl

# Ollama API base URL (default: localhost)
OLLAMA_BASE_URL=http://localhost:11434

# Text model for flood report parsing (Qwen 3)
LLM_TEXT_MODEL=qwen3

# Vision model for flood image analysis (Qwen 3-VL)
LLM_VISION_MODEL=qwen3-vl

# Timeout for LLM requests in seconds
LLM_TIMEOUT_SECONDS=30

# Enable/disable LLM integration (set to false to use fallback NLP)
LLM_ENABLED=true
